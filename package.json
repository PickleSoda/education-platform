{
  "name": "edu-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Educational Platform - Monorepo",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:api": "pnpm --filter @edu-platform/api dev",
    "dev:web": "pnpm --filter @edu-platform/web dev",
    "build": "pnpm run --parallel build",
    "build:api": "pnpm --filter @edu-platform/api build",
    "build:web": "pnpm --filter @edu-platform/web build",
    "lint": "pnpm run --parallel lint",
    "lint:fix": "pnpm run --parallel lint:fix",
    "test": "pnpm run --parallel test",
    "clean": "pnpm run --parallel clean && rm -rf node_modules",
    "db:migrate": "pnpm --filter @edu-platform/api db:migrate",
    "db:studio": "pnpm --filter @edu-platform/api db:studio",
    "db:seed": "pnpm --filter @edu-platform/api db:seed",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down -v",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:prod": "docker compose up --build -d",
    "docker:prod:down": "docker compose down"
  },
  "devDependencies": {
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}